.{
    .name = .@"{{PROJECT_NAME}}",
    .version = "0.1.0",
    .description = "A C library built with ovo",
    .license = "MIT",
    .authors = .{
        "{{AUTHOR_NAME}} <{{AUTHOR_EMAIL}}>",
    },

    // Minimum ovo version required
    .minimum_ovo_version = "0.1.0",

    .defaults = .{
        .c_standard = .c17,
        .compiler = .auto,
        .optimization = .debug,
    },

    .targets = .{
        .@"{{PROJECT_NAME}}" = .{
            .type = .static_library,
            .language = .c,
            .sources = .{"src/**/*.c"},
            .public_include = .{"include"},
        },
    },

    .tests = .{
        .unit = .{
            .sources = .{"tests/**/*.c"},
            .link = .{"{{PROJECT_NAME}}"},
        },
    },

    .dependencies = .{
        // Example: .curl = .{ .system = true },
    },
}
